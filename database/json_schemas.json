{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MoMo SMS JSON Schemas",
  "type": "object",

  "definitions": {

    "User": {
      "type": "object",
      "properties": {
        "user_id": { "type": "integer" },
        "phone_number": {
          "type": "string",
          "pattern": "^250[0-9]{9}$"
        },
        "full_name": { "type": "string", "maxLength": 100 },
        "email": { "type": ["string", "null"], "format": "email" },
        "registration_date": { "type": "string", "format": "date-time" },
        "account_status": {
          "type": "string",
          "enum": ["active", "suspended", "closed"]
        }
      },
      "required": ["user_id", "phone_number", "full_name", "account_status"]
    },

    "TransactionCategory": {
      "type": "object",
      "properties": {
        "category_id": { "type": "integer" },
        "category_name": { "type": "string", "maxLength": 50 },
        "description": { "type": ["string", "null"] },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["category_id", "category_name"]
    },

    "Merchant": {
      "type": "object",
      "properties": {
        "merchant_id": { "type": "integer" },
        "merchant_name": { "type": "string", "maxLength": 100 },
        "merchant_code": { "type": "string", "maxLength": 20 },
        "phone_number": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["merchant_id", "merchant_name", "merchant_code", "phone_number"]
    },

    "Transaction": {
      "type": "object",
      "properties": {
        "transaction_id": { "type": "string" },
        "sender_id": { "type": "integer" },
        "receiver_id": { "type": ["integer", "null"] },
        "category_id": { "type": "integer" },
        "amount": { "type": "number", "minimum": 0 },
        "currency": { "type": "string", "enum": ["RWF"] },
        "transaction_fee": { "type": "number", "minimum": 0 },
        "transaction_date": { "type": "string", "format": "date-time" },
        "description": { "type": ["string", "null"] }
      },
      "required": [
        "transaction_id",
        "sender_id",
        "category_id",
        "amount",
        "transaction_date"
      ]
    },

    "TransactionMerchant": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "transaction_id": { "type": "string" },
        "merchant_id": { "type": "integer" },
        "merchant_fee": { "type": "number", "minimum": 0 },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "transaction_id", "merchant_id"]
    },

    "SystemLog": {
      "type": "object",
      "properties": {
        "log_id": { "type": "integer" },
        "log_type": {
          "type": "string",
          "enum": ["info", "warning", "error", "debug"]
        },
        "message": { "type": "string" },
        "transaction_id": { "type": ["string", "null"] },
        "timestamp": { "type": "string", "format": "date-time" },
        "additional_data": { "type": ["object", "null"] }
      },
      "required": ["log_id", "log_type", "message"]
    },

    "FullTransaction": {
      "type": "object",
      "properties": {
        "transaction_id": { "type": "string" },
        "transaction_date": { "type": "string", "format": "date-time" },
        "sender": { "$ref": "#/definitions/User" },
        "receiver": {
          "anyOf": [
            { "$ref": "#/definitions/User" },
            { "type": "null" }
          ]
        },
        "category": {
          "$ref": "#/definitions/TransactionCategory"
        },
        "amount": { "type": "number" },
        "transaction_fee": { "type": "number" },
        "merchants": {
          "type": "array",
          "items": { "$ref": "#/definitions/Merchant" }
        }
      },
      "required": [
        "transaction_id",
        "transaction_date",
        "sender",
        "category",
        "amount"
      ]
    }

  }
}
